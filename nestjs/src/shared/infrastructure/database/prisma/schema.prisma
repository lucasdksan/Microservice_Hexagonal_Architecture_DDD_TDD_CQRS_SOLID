generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Booking {
    id       Int      @id @default(autoincrement())
    placedAt DateTime
    start    DateTime
    end      DateTime
    status   Int      @default(0)

    guest_id Int
    guest    Guest @relation(fields: [guest_id], references: [id])

    room_id Int
    room    Room @relation(fields: [room_id], references: [id])

    @@map("booking")
}

model Guest {
    id           Int    @id @default(autoincrement())
    name         String
    surname      String
    email        String @unique
    idNumber     String
    documentType Int

    bookings Booking[]

    @@map("guest")
}

model Room {
    id            Int     @id @default(autoincrement())
    name          String
    level         Int
    inMaintenance Boolean
    value         Float
    currency      Int

    bookings Booking[]

    @@map("room")
}
